{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Query",
    "type": "object",
    "properties": {
        "queryType": {
            "enum": [
                "PERSON",
                "ARTICLE"
            ]
        },
        "includes": {
            "type": "array",
            "items": {
                "enum": ["PERSON", "ARTICLE"]
            }
        },
        "method": {
            "enum": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        },
        "filter": {
            "anyOf": [
                {
                    "$ref": "file:src/schemas/person.json"
                },
                {
                    "$ref": "file:src/schemas/article.json"
                }
            ]
        }
    },
    "required": [
        "queryType",
        "method"
    ]
}